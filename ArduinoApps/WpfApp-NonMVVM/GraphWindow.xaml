<Window x:Class="WpfApp_NonMVVM.GraphWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_NonMVVM"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Icon="icon.ico"
        Title="GraphView" MinHeight="350" MinWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="9.5*"/>
        </Grid.RowDefinitions>
        <Button Click="GraphSave_Button" Content="グラフの保存" Grid.Row="0" Margin="10 5" Width="100" HorizontalAlignment="Left"/>
        <oxy:PlotView x:Name="GraphView" Grid.Row="1" Margin="10"/>
    </Grid>
</Window>
