<UserControl x:Class="WPFApp.View.LoggerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFApp.View"
             xmlns:vm="clr-namespace:WPFApp.ViewModel"
             mc:Ignorable="d" 
             >
    
    <UserControl.DataContext>
        <vm:LoggerControlViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.05*"/>
        </Grid.RowDefinitions>
        <DataGrid IsSynchronizedWithCurrentItem="True" ItemsSource="{Binding Data}"/>
        <Button Content="データの保存" Command="{Binding Save}" Grid.Row="1" Width="100"/>
    </Grid>
</UserControl>
