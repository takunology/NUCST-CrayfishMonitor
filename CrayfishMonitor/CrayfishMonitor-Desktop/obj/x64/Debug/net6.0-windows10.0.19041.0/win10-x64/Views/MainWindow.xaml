<Window x:ConnectionId='1'
    x:Class="CrayfishMonitor_Desktop.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CrayfishMonitor_Desktop"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <NavigationView x:ConnectionId='2' x:Name="vavview"
                        AlwaysShowHeader="True"
                        IsSettingsVisible="True"
                        IsBackButtonVisible="Collapsed"
                                                             
                        OpenPaneLength="250"
                        PaneDisplayMode="Left">
            <NavigationView.MenuItems>
                <NavigationViewItem Icon="Play" Content="データ計測" Tag="MonitorPage" IsSelected="True"/>
                <NavigationViewItem Icon="List" Content="計測履歴" Tag="DataPage"/>
                <NavigationViewItem Icon="Folder" Content="データ読み込み" Tag="DataOpenPage"/>
            </NavigationView.MenuItems>
            <NavigationView.Content>
                <Frame x:ConnectionId='3' x:Name="frame"                                                Height="Auto" Width="Auto" Margin="0 10"/>
            </NavigationView.Content>
        </NavigationView>

    </Grid>
</Window>

