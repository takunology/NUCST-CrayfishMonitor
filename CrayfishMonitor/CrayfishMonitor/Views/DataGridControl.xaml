<UserControl x:Class="CrayfishMonitor.Views.DataGridControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CrayfishMonitor.Views"
             xmlns:vm="clr-namespace:CrayfishMonitor.ViewModels"
             mc:Ignorable="d" >
    <UserControl.DataContext>
        <vm:DataGridViewModel/>
    </UserControl.DataContext>
    <Grid>
        <DataGrid x:Name="ArduinoDataGrid"
                  ItemsSource="{Binding ArduinoDatas}"
                  VerticalAlignment="Stretch"
                  Margin="5"
                  CanUserAddRows="false"
                  CanUserDeleteRows="False"/>
    </Grid>
</UserControl>
